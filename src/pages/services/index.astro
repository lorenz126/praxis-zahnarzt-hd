---
import BaseLayout from '../../layouts/BaseLayout.astro';
import services from '../../data/de/services.json';

const serviceImages: Record<string, string> = {
  prevention: '/images/prophylaxe.jpg',
  fillings: '/images/zahnerhaltung.jpg',
  prosthodontics: '/images/prothetik.jpg',
  endodontics: '/images/endotontie.jpg',
  periodontology: '/images/parodontologie.jpg',
  implantology: '/images/implantologie.jpg',
  pediatric: '/images/kinderzahnheilkunde.jpg',
  aesthetics: '/images/bleaching.jpg',
  functional: '/images/aufbissschiene.jpg',
};

const cards = services.cards;
---

<BaseLayout
  title="Unsere Leistungen | Zahnarztpraxis Dr. Herrmann-Flechtenmacher"
  description="Umfassendes Leistungsspektrum der Zahnarztpraxis Dr. Herrmann-Flechtenmacher: Prophylaxe, FÃ¼llungen, Zahnersatz, Implantologie, Parodontologie und mehr."
>
  <!-- Hero Section -->
  <section class="bg-white/50 backdrop-blur-sm">
    <div class="max-w-7xl mx-auto px-5 sm:px-8 lg:pl-6 lg:pr-12 pt-16 sm:pt-24 pb-12 sm:pb-16">
      <h1 class="text-4xl font-medium text-charcoal max-w-5xl">
        {services.hub.title}
      </h1>
      <p class="mt-6 text-lg text-stone max-w-2xl">
        {services.hub.subtitle}
      </p>
    </div>
  </section>

  <!-- Services Grid -->
  <section class="bg-white/60 backdrop-blur-sm">
    <div class="max-w-7xl mx-auto px-5 sm:px-8 lg:pl-6 lg:pr-12 py-14 sm:py-20">
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        {cards.map((service) => (
          <a
            href={`/services/${service.id}`}
            class="group rounded-2xl bg-white/40 backdrop-blur-sm overflow-hidden hover:shadow-lg transition-all duration-300"
          >
            <!-- Image area -->
            <div class="relative aspect-[4/3] overflow-hidden">
              <img
                src={serviceImages[service.id] || '/images/team-photo.png'}
                alt={service.title}
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/20 to-transparent"></div>
              <div class="absolute bottom-4 left-4 right-4">
                <span class="inline-block text-xs font-medium text-white/80 uppercase tracking-wider">
                  {service.category}
                </span>
              </div>
            </div>

            <!-- Text area -->
            <div class="p-6">
              <h3 class="text-lg font-medium text-charcoal leading-snug group-hover:text-primary transition-colors">
                {service.title}
              </h3>
              <p class="mt-2 text-sm text-stone leading-relaxed">
                {service.description}
              </p>
              <span class="mt-4 inline-flex items-center gap-1.5 text-sm font-medium text-primary group-hover:gap-2.5 transition-all">
                {services.hub.learnMore}
                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
                </svg>
              </span>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="bg-white/55 backdrop-blur-sm">
    <div class="max-w-7xl mx-auto px-5 sm:px-8 lg:pl-6 lg:pr-12 py-14 sm:py-20">
      <div class="rounded-2xl bg-gradient-to-br from-primary/10 to-secondary/10 p-8 sm:p-12 text-center">
        <h2 class="text-2xl sm:text-3xl font-medium text-charcoal">
          {services.hub.cta.title}
        </h2>
        <p class="mt-4 text-stone max-w-2xl mx-auto">
          {services.hub.cta.subtitle}
        </p>
        <div class="mt-8 flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="https://heidelberg-zahnmedizin.termin.dampsoft.net/patientenportal/suche"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center justify-center gap-2 bg-primary text-white px-8 py-3 rounded-full font-medium hover:bg-primary-dark transition-colors"
          >
            {services.hub.cta.bookButton}
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
            </svg>
          </a>
          <a
            href="/contact"
            class="inline-flex items-center justify-center gap-2 bg-white/60 backdrop-blur-sm text-charcoal px-8 py-3 rounded-full font-medium hover:bg-white/80 transition-colors"
          >
            {services.hub.cta.contactButton}
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
