---
import BaseLayout from '../layouts/BaseLayout.astro';
import practice from '../data/de/practice.json';

const teamImages: Record<string, string> = {
  'Dr. med. dent. Christine Herrmann-Flechtenmacher': '/images/christine-herrmann-flechtenmacher.png',
};

const team = practice.team.members;

const technologyIconPaths = [
  'M9 17.25v1.007a3 3 0 01-.879 2.122L7.5 21h9l-.621-.621A3 3 0 0115 18.257V17.25m6-12V15a2.25 2.25 0 01-2.25 2.25H5.25A2.25 2.25 0 013 15V5.25m18 0A2.25 2.25 0 0018.75 3H5.25A2.25 2.25 0 003 5.25m18 0V12a2.25 2.25 0 01-2.25 2.25H5.25A2.25 2.25 0 013 12V5.25',
  'M2.25 15.75l5.159-5.159a2.25 2.25 0 013.182 0l5.159 5.159m-1.5-1.5l1.409-1.409a2.25 2.25 0 013.182 0l2.909 2.909m-18 3.75h16.5a1.5 1.5 0 001.5-1.5V6a1.5 1.5 0 00-1.5-1.5H3.75A1.5 1.5 0 002.25 6v12a1.5 1.5 0 001.5 1.5zm10.5-11.25h.008v.008h-.008V8.25zm.375 0a.375.375 0 11-.75 0 .375.375 0 01.75 0z',
  'M15.75 10.5l4.72-4.72a.75.75 0 011.28.53v11.38a.75.75 0 01-1.28.53l-4.72-4.72M4.5 18.75h9a2.25 2.25 0 002.25-2.25v-9a2.25 2.25 0 00-2.25-2.25h-9A2.25 2.25 0 002.25 7.5v9a2.25 2.25 0 002.25 2.25z',
  'M3.75 13.5l10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75z',
];

const technologies = practice.technologies.items.map((tech, index) => ({
  ...tech,
  iconPath: technologyIconPaths[index],
}));
---

<BaseLayout
  title="Unsere Praxis | Zahnarztpraxis Dr. Herrmann-Flechtenmacher"
  description="Moderne Zahnarztpraxis im Ärztehaus HD-West, Heidelberg. CEREC, digitales Röntgen, Dental-Laser. Lernen Sie unser erfahrenes Team kennen."
>
  <!-- Hero Section -->
  <section class="bg-white/50 backdrop-blur-sm">
    <div class="max-w-7xl mx-auto px-5 sm:px-8 lg:pl-6 lg:pr-12 pt-16 sm:pt-24 pb-12 sm:pb-16">
      <h1 class="text-4xl font-medium text-charcoal max-w-5xl">
        {practice.hero.title}
      </h1>
      <p class="mt-6 text-lg text-stone max-w-2xl">
        {practice.hero.subtitle}
      </p>
    </div>
  </section>

  <!-- Philosophy Section -->
  <section class="bg-white/55 backdrop-blur-sm">
    <div class="max-w-7xl mx-auto px-5 sm:px-8 lg:pl-6 lg:pr-12 py-14 sm:py-20">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-2xl font-medium text-charcoal mb-6">Unsere Philosophie</h2>
          <div class="space-y-4 text-stone leading-relaxed">
            {practice.philosophy.paragraphs.map((paragraph) => (
              <p>{paragraph}</p>
            ))}
          </div>
        </div>
        <div class="rounded-2xl overflow-hidden aspect-[4/3] bg-gradient-to-br from-primary/20 to-secondary/20">
          <img src="/images/team-photo.png" alt="Praxisphilosophie" class="w-full h-full object-cover" />
        </div>
      </div>
    </div>
  </section>

  <!-- Team Section -->
  <section class="bg-white/60 backdrop-blur-sm">
    <div class="max-w-7xl mx-auto px-5 sm:px-8 lg:pl-6 lg:pr-12 py-14 sm:py-20">
      <h2 class="text-2xl font-medium text-charcoal mb-12">Unser Team</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {team.map((member) => (
          <div class="rounded-2xl bg-white/40 backdrop-blur-sm p-6">
            <div class="aspect-square rounded-xl overflow-hidden bg-gradient-to-br from-primary/20 to-secondary/20 mb-4">
              <img src={teamImages[member.name] || '/images/team-photo.png'} alt={member.name} class="w-full h-full object-cover" />
            </div>
            <div class="text-sm text-primary font-medium mb-1">{member.experience}</div>
            <h3 class="text-lg font-medium text-charcoal mb-1">{member.name}</h3>
            <div class="text-sm text-stone mb-3">{member.role}</div>
            <p class="text-sm text-stone leading-relaxed">{member.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Technology Section -->
  <section class="bg-white/55 backdrop-blur-sm">
    <div class="max-w-7xl mx-auto px-5 sm:px-8 lg:pl-6 lg:pr-12 py-14 sm:py-20">
      <h2 class="text-2xl font-medium text-charcoal mb-6">Modernste Technologie</h2>
      <p class="text-stone mb-12 max-w-2xl">
        Wir investieren kontinuierlich in modernste zahnmedizinische Technologie, um Ihnen die beste Behandlungsqualität zu bieten.
      </p>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {technologies.map((tech) => (
          <div class="p-6 rounded-2xl bg-white/40 backdrop-blur-sm">
            <div class="w-12 h-12 rounded-lg bg-primary/10 flex items-center justify-center text-primary mb-4">
              <svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d={tech.iconPath} />
              </svg>
            </div>
            <h3 class="text-lg font-medium text-charcoal mb-2">{tech.title}</h3>
            <p class="text-sm text-stone leading-relaxed">{tech.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Location Section -->
  <section class="bg-white/60 backdrop-blur-sm">
    <div class="max-w-7xl mx-auto px-5 sm:px-8 lg:pl-6 lg:pr-12 py-14 sm:py-20">
      <h2 class="text-2xl font-medium text-charcoal mb-12">Unsere Lage</h2>
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <div>
          <h3 class="text-lg font-medium text-charcoal mb-4">Zentral im Ärztehaus HD-West</h3>
          <div class="space-y-4 text-stone">
            <div>
              <p class="font-medium text-charcoal">Adresse</p>
              <p>Franz-Knauff-Straße 2-4</p>
              <p>69115 Heidelberg</p>
              <p class="text-sm mt-1">4. Stock im Ärztehaus HD-West</p>
            </div>
            <div>
              <p class="font-medium text-charcoal">Anfahrt</p>
              <p class="text-sm">
                {practice.location.transport.map((item) => (
                  <Fragment>• {item}<br /></Fragment>
                ))}
              </p>
            </div>
            <div>
              <p class="font-medium text-charcoal">Kontakt</p>
              <p>Tel: 06221 - 6184010</p>
              <p>
                E-Mail: <a href="mailto:info@heidelberg-zahnmedizin.de" class="text-primary hover:underline">info@heidelberg-zahnmedizin.de</a>
              </p>
            </div>
          </div>
        </div>
        <div class="rounded-2xl overflow-hidden aspect-[4/3]">
          <iframe
            title="Zahnarztpraxis Heidelberg Location"
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2662.1!2d8.6519!3d49.3854!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4797c1234abcdef%3A0x123456789!2sFranz-Knauff-Stra%C3%9Fe+2-4%2C+69115+Heidelberg!5e0!3m2!1sde!2sde!4v1700000000000"
            width="100%"
            height="100%"
            style="border: 0"
            allowfullscreen
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
          ></iframe>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="bg-white/55 backdrop-blur-sm">
    <div class="max-w-7xl mx-auto px-5 sm:px-8 lg:pl-6 lg:pr-12 py-14 sm:py-20">
      <div class="rounded-2xl bg-gradient-to-br from-primary/10 to-secondary/10 p-8 sm:p-12 text-center">
        <h2 class="text-2xl sm:text-3xl font-medium text-charcoal">Besuchen Sie uns</h2>
        <p class="mt-4 text-stone max-w-2xl mx-auto">
          Vereinbaren Sie einen Termin und lernen Sie unser Team und unsere moderne Praxis persönlich kennen.
        </p>
        <div class="mt-8 flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="https://heidelberg-zahnmedizin.termin.dampsoft.net/patientenportal/suche"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center justify-center gap-2 bg-primary text-white px-8 py-3 rounded-full font-medium hover:bg-primary-dark transition-colors"
          >
            Online Termin buchen
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
            </svg>
          </a>
          <a
            href="/contact"
            class="inline-flex items-center justify-center gap-2 bg-white/60 backdrop-blur-sm text-charcoal px-8 py-3 rounded-full font-medium hover:bg-white/80 transition-colors"
          >
            Kontakt aufnehmen
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
